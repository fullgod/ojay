%h1 Forms tests

#results

%form#login
  %div
    %span Username
    %input{:name => 'username'}
  %div
    %label{:for => 'email'} Your email
    %input{:name => 'email', :id => 'email'}
  %div
    %span Password
    %input{:name => 'password', :type => 'password'}
  %div
    %input{:type => 'submit', :value => 'Sign in'}

%form#search{:action => '/service/search.html', :method => 'GET'}
  %div
    %label{:for => 'q'} Search terms
    %input{:name => 'q', :id => 'q'}
  %div
    %input{:type => 'submit', :value => 'Go'}

#searches

=javascripts 'test/forms'

:plain
  <style type="text/css">
    form { margin: 18px 0; }
    span, label { float: left; width: 100px; }
    .invalid, .error-explanation { background: #fcc; border: 1px solid #900; }
    .error-explanation { padding: 12px; margin: 12px; }
  </style>