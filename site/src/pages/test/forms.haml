%h1 Forms tests

%div#results

%form#login
  %div
    %span Username
    %input{:name => 'username'}
  %div
    %label{:for => 'email'} Your email
    %input{:name => 'email', :id => 'email'}
  %div
    %span Password
    %input{:name => 'password', :type => 'password'}
  %div
    %input{:type => 'submit', :value => 'Sign in'}

=javascripts 'test/forms'

:plain
  <style type="text/css">
    span, label { float: left; width: 100px; }
    .invalid, .error-explanation { background: #fcc; border: 1px solid #900; }
    .error-explanation { padding: 12px; margin: 12px; }
  </style>